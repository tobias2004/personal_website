---
const { email } = Astro.props;
---

<style>
  .email-side {
    position: fixed;
    bottom: 0;
    right: 40px;
    z-index: 10;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .email-side::after {
    content: '';
    display: block;
    width: 1px;
    height: 90px;
    margin: 0 auto;
    background-color: lightblue;
  }

  .email-link {
    margin: 20px auto;
    padding: 10px;
    font-family: var(--font-mono, monospace);
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    writing-mode: vertical-rl;
    text-decoration: none;
    color: white;
    transition: transform 0.2s ease;
  }

  .email-link:hover {
    transform: translateY(-3px);
    color: lightblue;
  }

  @media (max-width: 1080px) {
    .email-side {
      right: 20px;
    }
  }

  @media (max-width: 768px) {
    .email-side {
      display: none;
    }
  }
</style>

<div class="email-side">
  <a class="email-link" href={`mailto:${email}`}>{email}</a>
</div>
